{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto"
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "noAutofocus": "off"
      },
      "nursery": {
        "noConsole": "error",
        "noDoneCallback": "error",
        "noDuplicateAtImportRules": "error",
        "noDuplicateElseIf": "error",
        "noDuplicateFontNames": "error",
        "noDuplicateJsonKeys": "error",
        "noDuplicateSelectorsKeyframeBlock": "error",
        "noEmptyBlock": "error",
        "noEvolvingTypes": "error",
        "noImportantInKeyframe": "error",
        "noInvalidPositionAtImportRule": "error",
        "noLabelWithoutControl": "error",
        "noMisplacedAssertion": "error",
        "noReactSpecificProps": "error",
        "noRestrictedImports": "error",
        "noUndeclaredDependencies": "error",
        "noUnknownFunction": "error",
        "noUnknownMediaFeatureName": "error",
        "noUnknownProperty": "error",
        "noUnknownSelectorPseudoElement": "error",
        "noUnknownUnit": "error",
        "noUnmatchableAnbSelector": "error",
        "noUnusedFunctionParameters": "error",
        "noUselessStringConcat": "error",
        "noUselessUndefinedInitialization": "error",
        "noYodaExpression": "error",
        "useAdjacentOverloadSignatures": "error",
        "useConsistentBuiltinInstantiation": "error",
        "useDateNow": "error",
        "useDefaultSwitchClause": "error",
        "useErrorMessage": "error",
        "useExplicitLengthCheck": "error",
        "useFocusableInteractive": "error",
        "useGenericFontNames": "error",
        "useImportExtensions": "error",
        "useImportRestrictions": "error",
        "useNumberToFixedDigitsArgument": "error",
        "useSemanticElements": "error",
        "useSortedClasses": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error",
        "useTopLevelRegex": "error"
      },
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "requireAscii": true,
            "filenameCases": ["kebab-case"]
          }
        },
        "useSingleVarDeclarator": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "enabled": true,
      "indentSize": 2,
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "double",
      "lineEnding": "lf",
      "lineWidth": 80,
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma":"all",
      "trailingCommas": "all"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": false,
      "cssModules": false
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentSize": 2,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    }
  },
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["**/components/ui/**"]
  }
}
